---
import BookCard from "./BookCard.astro";

type Book = {
    id: string;
    title: string;
    thumbnail_name: string;
    creators: Array<string>;
};

const apiEndpoint: string = import.meta.env.API_BASE_URL
    ? import.meta.env.API_BASE_URL
    : "http://api";

const response = await fetch(`${apiEndpoint}/list-books`);
const data: Array<Book> = await response.json();
---

<section class="books">
    <div class="book-card-grid">
        {
            data.map((data) => (
                <BookCard
                    id={data.id}
                    title={data.title}
                    creators={data.creators}
                    thumbnailName={data.thumbnail_name}
                />
            ))
        }
    </div>
</section>

<style>
    .books {
        display: flex;
        justify-content: center;
        vertical-align: middle;
        position: relative;
        margin: auto;
    }
    .book-card-grid {
        display: grid;
        width: 90%;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    }
</style>
